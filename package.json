{
  "name": "bbcode-wiki",
  "version": "1.0.0",
  "description": "BBCode Wiki Editor with Steamworks Documentation Layout",
  "main": "server/index.js",
  "scripts": {
    "server": "node server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && npm run build",
    "seed": "node server/seed.js",
    "test": "node tests/api.test.js",
    "test:bbcode": "node tests/bbcode.test.js",
    "test:htmlbbcode": "node tests/htmlToBBCode.test.js",
    "test:deletion": "node tests/deletion.test.js",
    "test:collab": "node tests/collaboration.test.js",
    "test:tabs": "node tests/editorTabs.test.js",
    "test:all": "npm run test:bbcode && npm run test:htmlbbcode && npm run test:tabs && npm run test && npm run test:deletion && npm run test:collab",
    "start": "node server/index.js",
    "postinstall": "cd client && npm install",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jsdom": "^22.1.0",
    "socket.io-client": "^4.8.1"
  }
}
